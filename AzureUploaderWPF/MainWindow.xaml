                            </TextBlock>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <Button Grid.Row="2" 
                           Content="Close" 
                           Width="120" 
                           Height="40" 
                           FontSize="14"
                           HorizontalAlignment="Right"
                           Background="#3498DB"
                           Foreground="White"
                           BorderThickness="0"
                           Click="CloseHelpPopup_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>

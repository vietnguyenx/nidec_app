<Window x:Class="AzureUploaderWPF.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đang upload..."
        Width="500" Height="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FFFFFF">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" 
                   Text="Đang upload các file CSV..." 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>
        
        <!-- Thông tin tiến trình -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                      Text="Đang xử lý: " 
                      Foreground="#2C3E50"
                      FontWeight="SemiBold"
                      VerticalAlignment="Center"/>
            
            <TextBlock Grid.Column="1" 
                      Name="CurrentFileText" 
                      Text="0" 
                      Foreground="#2C3E50"
                      Margin="5,0,0,0"
                      VerticalAlignment="Center"/>
            
            <TextBlock Grid.Column="1" 
                      Text="/" 
                      Foreground="#2C3E50"
                      Margin="25,0,0,0"
                      VerticalAlignment="Center"/>
            
            <TextBlock Grid.Column="1" 
                      Name="TotalFilesText" 
                      Text="0" 
                      Foreground="#2C3E50"
                      Margin="38,0,0,0"
                      VerticalAlignment="Center"/>
            
            <TextBlock Grid.Column="3" 
                      Name="PercentageText" 
                      Text="0%" 
                      Foreground="#2C3E50"
                      FontWeight="Bold"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Right"/>
        </Grid>
        
        <!-- Thanh tiến độ -->
        <ProgressBar Grid.Row="2" 
                    Name="ProgressBar" 
                    Height="15" 
                    Value="0" 
                    Maximum="100"
                    Foreground="#3498DB"
                    Background="#F5F7FA"
                    BorderThickness="0"
                    Margin="0,0,0,20"/>
        
        <!-- Tên file hiện tại -->
        <Border Grid.Row="3" 
               Background="#F9FAFB" 
               BorderBrush="#ECF0F1" 
               BorderThickness="1" 
               CornerRadius="5"
               Padding="15,10"
               Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                         Text="File hiện tại: " 
                         Foreground="#34495E"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" 
                         Name="CurrentFileNameText" 
                         Text="Đang chuẩn bị..." 
                         Foreground="#34495E"
                         VerticalAlignment="Center"
                         TextTrimming="CharacterEllipsis"/>
            </Grid>
        </Border>
        
        <!-- Thông báo -->
        <TextBlock Grid.Row="4" 
                  Text="Vui lòng đợi trong khi các file được upload. Quá trình này có thể mất một chút thời gian tùy thuộc vào số lượng file và kích thước dữ liệu." 
                  TextWrapping="Wrap" 
                  Foreground="#7F8C8D"
                  VerticalAlignment="Center"/>
    </Grid>
</Window> 